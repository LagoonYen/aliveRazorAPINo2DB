@page
@model AliveStoreTemplate.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<article class="page RegisterLoginPage">
    <div class="container">
        <div class="row">
                <div class="ui center aligned basic segment">
                    <div class="ui left icon action input my-5">
                        <div class="column">
                            <form class="ui form" method="post">
                                <div class="field my-5">
                                    <label>電子信箱</label>
                                    <div class="ui left icon input">
                                       <input asp-for="Account" placeholder="請輸入信箱" />
                                        <i class="user icon"></i>
                                    </div>
                                </div>
                                <div class="field my-5">
                                    <label>密碼</label>
                                    <div class="ui left icon input">
                                        <input asp-for="Password"  type="password"  placeholder="請輸入密碼" />
                                        <i class="lock icon"></i>
                                    </div>
                                </div>
                                <div>
                                    @if(@Model.Notice != null)
                                    {
                                        <p style="color:red">
                                            @Model.Notice
                                        </p>
                                    }
                                </div>
                                <button class="ui blue button my-2" type="submit" asp-page-handler="MyLogin">登錄</button>
                            </form>
                        </div>
                    </div>
                    <div class="ui horizontal divider">
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">
                                或者
                            </font>
                        </font>
                    </div>
                    <div class="middle aligned column my-5">
                        <a asp-page="./Register">
                            <div class="ui big button">
                                <i class="signup icon"></i>
                                註冊
                            </div>
                        </a>
                    </div>
                </div>
        </div>
    </div>
    @if (ViewData["Message"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewData["Message"]");
            };
        </script>
    }
</article>
